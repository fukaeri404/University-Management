<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox style="-fx-background-color: #94B49F;" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="250.0" spacing="30.0" style="-fx-border-color: white;">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/waseda-university-logo.png" />
                     </image>
                  </ImageView>
                  <Button focusTraversable="false" mnemonicParsing="false" onAction="#processStudent" prefWidth="150.0" text="Students">
                     <font>
                        <Font name="Britannic Bold" size="16.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button focusTraversable="false" mnemonicParsing="false" prefWidth="150.0" text="Teachers">
                     <font>
                        <Font name="Britannic Bold" size="16.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button focusTraversable="false" mnemonicParsing="false" prefWidth="150.0" text="Departments">
                     <font>
                        <Font name="Britannic Bold" size="16.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button focusTraversable="false" mnemonicParsing="false" prefWidth="150.0" text="Courses">
                     <font>
                        <Font name="Britannic Bold" size="16.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </VBox>
            <StackPane HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Don't worry, Skip the Class, Be Happy">
                     <font>
                        <Font name="Bauhaus 93" size="34.0" />
                     </font>
                  </Label>
                  <VBox fx:id="vb_student" prefHeight="200.0" prefWidth="100.0" visible="false">
                     <children>
                        <HBox spacing="20.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#processAddStudent" prefWidth="100.0" text="Add">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Button>
                              <Button fx:id="btn_delete" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#processDeleteStudent" prefWidth="100.0" text="Delete">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Button>
                              <Button layoutX="150.0" layoutY="10.0" mnemonicParsing="false" onAction="#processShowStudents" prefWidth="150.0" text="Show All Students">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Button>
                              <ComboBox fx:id="cbbYear" onAction="#processYear" prefWidth="150.0" promptText="Academic Year">
                                 <HBox.margin>
                                    <Insets left="50.0" />
                                 </HBox.margin>
                              </ComboBox>
                           </children>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </HBox>
                        <ListView fx:id="lvStudent" onMouseClicked="#mc_lvStudent" prefHeight="200.0" prefWidth="200.0" style="-fx-background-radius: 20;" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </ListView>
                     </children>
                  </VBox>
                  <VBox fx:id="vb_teacher" prefHeight="200.0" prefWidth="100.0" visible="false">
                     <children>
                        <HBox spacing="20.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#processAddTeacher" prefWidth="100.0" text="Add">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Button>
                              <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#processDeleteTeacher" prefWidth="100.0" text="Delete">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Button>
                              <ComboBox fx:id="cbb_course" prefWidth="150.0" promptText="Courses">
                                 <HBox.margin>
                                    <Insets left="220.0" />
                                 </HBox.margin>
                              </ComboBox>
                           </children>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </HBox>
                        <ListView fx:id="lv_teacher" prefHeight="200.0" prefWidth="200.0" style="-fx-background-radius: 20;" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </ListView>
                     </children>
                  </VBox>
               </children>
            </StackPane>
         </children>
      </HBox>
   </children>
</VBox>
